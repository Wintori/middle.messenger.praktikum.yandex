{
    "ts-node": {
        "files": true
    },
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "strict": true,
        "skipLibCheck": true,
        "lib": [
            "ESNext",
            "DOM"
        ]
    }
}
