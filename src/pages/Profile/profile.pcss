.profile {
  width: 100%;
  position: relative;
  display: flex;

  &__container {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    max-width: 510px;
    width: 100%;
    margin: 0 auto;
  }

  &__image-container {
    position: relative;
    max-width: 130px;
    max-height: 130px;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 0;
    margin: 60px 0 0;
  }

  &__avatar {
    margin: 0;
    padding: 0;
    width: 130px;
    height: 130px;
    border-radius: 100px;
    position: relative;
    background-color: var(--bright-gray);
  }

  &__name {
    margin: 21px 0 60px;
    padding: 0;
    font-weight: 600;
    font-size: 16px;
    line-height: 16px;
    color: var(--black);
  }

  &__info {
    display: flex;
    flex-direction: column;
    width: 100%;

    &_change {
      margin: 97px 0 60px;
    }

    &__form {
      display: flex;
      flex-direction: column;
      gap: 10px;
      width: 100%;
    }
  }

  &__label {
    display: flex;
    justify-content: space-between;
    border-bottom: 1px solid var(--gray-line);
    padding: 0 0 10px;
    margin: 0;
    font-weight: 500;
    font-size: 13px;
    line-height: 13px;
    color: var(--black);
  }

  &__label:last-of-type {
    border: none;
  }

  &__input {
    text-align: right;
    border: none;
    width: 65%;
    margin: 0;
    padding: 0;
    font-weight: 500;
    font-size: 13px;
    line-height: 13px;
    color: var(--spanish-gray);
  }

  &__input-error {
    margin: 7px 0 0;
    padding: 0;
    font-weight: 400;
    font-size: 8px;
    line-height: 8px;
    color: var(--error-red);
    text-align: left;
  }

  &__button-container {
    display: flex;
    flex-direction: column;
    gap: 10px;
    width: 100%;
    margin-top: 60px;
    justify-content: flex-start;

    &__wrapper {
      border-bottom: 1px solid var(--gray-line);
      width: 100%;
      padding-bottom: 10px;
    }

    &__wrapper:last-of-type {
      padding: 0;
      border: none;
    }
  }

  &__back-image {
    width: 28px;
    height: 28px;
    margin: 0 auto;
  }
}
