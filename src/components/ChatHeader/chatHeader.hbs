<div class="chat__header">
  <div class="chat__header__information">
    {{#if avatar}}
      <img
        class="chat__header__information__image"
        src="{{avatar}}"
        alt="Аватар"
      />
    {{else}}
      <img
        class="chat__header__information__image"
        src="{{noAvatar}}"
        alt="Аватар"
      />
    {{/if}}
    <p class="chat__header__information__name">
      {{name}}
    </p>
  </div>
  <div class="chat__header__button-container">
    {{{buttonTools}}}
    {{{popupSettings}}}
  </div>
</div>