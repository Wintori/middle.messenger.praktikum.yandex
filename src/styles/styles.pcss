:active, :hover, :focus {
    outline: 0;
    outline-offset: 0;
}

body {
    margin: 0;
    padding: 0;
}

.container {
    position: relative;
    min-height: 100vh;
    max-height: 100vh;
    background-color: var(--white);
    display: flex;
    font-family: Inter, Arial, sans-serif;
    font-weight: normal;
    font-style: normal;
    text-rendering: optimizelegibility;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    text-size-adjust: 100%;

    &__list {
        flex-direction: column;
    }
}